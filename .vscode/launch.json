{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Module",
            "type": "python",
            "request": "launch",
            "console": "integratedTerminal",
            "pythonPath": "${workspaceFolder}/.venv/bin/python",
            // See https://community.plotly.com/t/debug-reloader-and-the-debugger-in-vs-code-systemexit-3/58444/4
            "flask": true,
            "module": "src",
            "cwd": "${workspaceFolder}",
            "args": [
                "--data",
                "./data/iris.csv",
                "--errors",
                "./data/errors/iris.csv",
                "--class",
                "setosa"
            ]
        }
    ]
}
